@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SisOdonto</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link href="~/theme/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/theme/dist/css/adminlte.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/toastr/toastr.min.css">
    <link href="~/site.css" rel="stylesheet" />
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <script src="~/theme/plugins/inputmask/jquery.inputmask.min.js"></script>

</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        <img src="~/theme/dist/img/icone.svg" class="user-image img-circle elevation-2" alt="User Image">
                        <span class="d-none d-md-inline">@User.Identity.Name</span>
                        <i class="fas fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <!-- User image -->
                        <li class="user-header bg-primary" style="background-color: #4b545c !important; padding-top: 45px !important;">
                            <i class="nav-icon fas fa-user fa-3x"></i>
                            <p>
                                @User.Identity.Name
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="row">
                                <div class="col-sm-6">
                                    <a asp-controller="Home" asp-action="ChangePassword" data-modal="">
                                        <input type="submit" value="Editar Senha" style="margin: 0 !important;" class="btn btn-default" />
                                    </a>
                                </div>
                                <div class="col-sm-6">
                                    <form class="form" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                                        <button type="submit" class="btn btn-default btn-flat float-right">Sair</button>
                                    </form>
                                </div>
                            </div>





                            @*<a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-default btn-flat float-right">Sair</a>*@
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/theme/dist/img/logo.svg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">SisOdonto</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-header">CADASTROS</li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Dentist" class="nav-link">
                                <i class="nav-icon fas fa-tooth"></i>
                                <p>
                                    Dentista
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Attendant" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Atendente
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Patient" class="nav-link">
                                <i class="nav-icon fas fa-user-plus"></i>
                                <p>
                                    Paciente
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="HealthInsurance" class="nav-link">
                                <i class="nav-icon fas fa-notes-medical"></i>
                                <p>
                                    Convênio
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">AGENDAMENTOS</li>
                        <li class="nav-item">
                            <a href="../kanban.html" class="nav-link">
                                <i class="nav-icon far fa-calendar-alt"></i>
                                <p>
                                    Agendar Consulta
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">RELATÓRIOS</li>
                        <li class="nav-item">
                            <a href="../kanban.html" class="nav-link">
                                <i class="nav-icon far fa-file-pdf"></i>
                                <p>
                                    Relatório de Pacientes
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        @RenderBody()
    </div>

    <div id="myModal" class="modal fade in">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div id="myModalContent"></div>
            </div>
        </div>
    </div>


    <div id="loadingoverlay">
        <div class="cv-spinner">
            <span class="spinner"></span>
        </div>
    </div>



    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/theme/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/theme/dist/js/demo.js"></script>

    <script src="~/theme/plugins/toastr/toastr.min.js"></script>


    <script src="~/site.js"></script>
    <script>
        $(document).ready(function () {
            SetModal();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>